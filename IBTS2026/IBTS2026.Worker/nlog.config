<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}/logs/nlog-internal.log">

  <!-- Define log file targets -->
  <targets>
    <!-- Console target with colored output -->
    <target xsi:type="ColoredConsole"
            name="console"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner= | ${exception:format=tostring}}"
            useDefaultRowHighlightingRules="true">
      <highlight-row condition="level == LogLevel.Trace" foregroundColor="DarkGray" />
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <!-- File target for all logs -->
    <target xsi:type="File"
            name="allfile"
            fileName="${basedir}/logs/ibts-worker-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner= | ${exception:format=tostring}}"
            archiveFileName="${basedir}/logs/archive/ibts-worker-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- File target for errors only -->
    <target xsi:type="File"
            name="errorfile"
            fileName="${basedir}/logs/ibts-worker-errors-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}"
            archiveFileName="${basedir}/logs/archive/ibts-worker-errors-{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="90"
            concurrentWrites="true"
            keepFileOpen="false" />

    <!-- JSON file target for structured logging -->
    <target xsi:type="File"
            name="jsonfile"
            fileName="${basedir}/logs/ibts-worker-${shortdate}.json"
            archiveFileName="${basedir}/logs/archive/ibts-worker-{#}.json"
            archiveEvery="Day"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            maxArchiveFiles="30">
      <layout xsi:type="JsonLayout" includeEventProperties="true">
        <attribute name="timestamp" layout="${longdate}" />
        <attribute name="level" layout="${level:uppercase=true}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="message" layout="${message}" />
        <attribute name="jobName" layout="${mdlc:item=JobName}" />
        <attribute name="jobRunId" layout="${mdlc:item=JobRunId}" />
        <attribute name="exception" layout="${exception:format=tostring}" />
        <attribute name="machineName" layout="${machinename}" />
        <attribute name="processId" layout="${processid}" />
      </layout>
    </target>
  </targets>

  <!-- Define logging rules -->
  <rules>
    <!-- Skip Microsoft logs below Warning level except for hosting lifetime -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="console,allfile" final="true" />

    <!-- Skip System logs below Warning level -->
    <logger name="System.*" maxlevel="Info" final="true" />

    <!-- Log Entity Framework queries at Debug level only when needed -->
    <logger name="Microsoft.EntityFrameworkCore.*" maxlevel="Info" final="true" />

    <!-- Application logs - all levels -->
    <logger name="IBTS2026.*" minlevel="Debug" writeTo="console,allfile,jsonfile" />

    <!-- Error logs to separate file -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- All other logs -->
    <logger name="*" minlevel="Info" writeTo="console,allfile" />
  </rules>
</nlog>
