@page "/incidents/edit/{IncidentId:int}"
@using IBTS2026.Web.Models
@using IBTS2026.Web.Services.ApiClients
@inject IIncidentApiClient IncidentApi
@inject ILookupApiClient LookupApi
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Edit Incident</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div>
            <h1>Edit Incident #@IncidentId</h1>
            <p class="page-subtitle">Update incident details</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border"></div>
            <p>Loading incident...</p>
        </div>
    }
    else if (notFound)
    {
        <div class="form-card">
            <div class="alert alert-warning">Incident not found.</div>
            <button class="btn btn-secondary" @onclick="Cancel">Back to Incidents</button>
        </div>
    }
    else
    {
        <div class="form-card">
            @if (errorMessage is not null)
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="incident" OnValidSubmit="HandleSubmit" FormName="EditIncidentForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" />

                <div class="form-group">
                    <label for="title" class="form-label">Title</label>
                    <InputText id="title" class="form-control" @bind-Value="incident.Title" />
                    <ValidationMessage For="() => incident.Title" />
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="5" @bind-Value="incident.Description" />
                    <ValidationMessage For="() => incident.Description" />
                </div>

                <div class="form-row">
                    <div class="form-group form-group-half">
                        <label for="priority" class="form-label">Priority</label>
                        <InputSelect id="priority" class="form-select" @bind-Value="incident.PriorityId">
                            @foreach (var priority in priorities)
                            {
                                <option value="@priority.PriorityId">@priority.PriorityName</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="form-group form-group-half">
                        <label for="status" class="form-label">Status</label>
                        <InputSelect id="status" class="form-select" @bind-Value="incident.StatusId">
                            @foreach (var status in statuses)
                            {
                                <option value="@status.StatusId">@status.StatusName</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                <div class="form-group">
                    <label for="assignedTo" class="form-label">Assigned To</label>
                    <InputSelect id="assignedTo" class="form-select" @bind-Value="incident.AssignedToUserId">
                        <option value="">-- Unassigned --</option>
                        @foreach (var user in users)
                        {
                            <option value="@user.UserId">@user.FullName</option>
                        }
                    </InputSelect>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Changes</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: var(--space-5);
    }

    .page-header h1 {
        margin-bottom: var(--space-1);
    }

    .page-subtitle {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .form-card {
        background: var(--color-bg-primary);
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .form-row {
        display: flex;
        gap: var(--space-4);
    }

    .form-group-half {
        flex: 1;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: var(--space-3);
        margin-top: var(--space-5);
        padding-top: var(--space-5);
        border-top: 1px solid var(--color-border-light);
    }

    .loading-state {
        text-align: center;
        padding: var(--space-10);
        background: var(--color-bg-primary);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .loading-state .spinner-border {
        width: 2rem;
        height: 2rem;
        color: var(--color-primary);
        margin-bottom: var(--space-4);
    }

    .loading-state p {
        color: var(--color-text-muted);
        margin-bottom: 0;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

@code {
    [Parameter]
    public int IncidentId { get; set; }

    private UpdateIncidentModel incident = new();
    private List<PriorityModel> priorities = [];
    private List<StatusModel> statuses = [];
    private List<UserLookupModel> users = [];

    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool notFound = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;

            var prioritiesTask = LookupApi.GetPrioritiesAsync();
            var statusesTask = LookupApi.GetStatusesAsync();
            var usersTask = LookupApi.GetUsersForDropdownAsync();
            var incidentTask = IncidentApi.GetIncidentAsync(IncidentId);

            await Task.WhenAll(prioritiesTask, statusesTask, usersTask, incidentTask);

            priorities = await prioritiesTask;
            statuses = await statusesTask;
            users = await usersTask;

            var existingIncident = await incidentTask;

            if (existingIncident is null)
            {
                notFound = true;
            }
            else
            {
                incident = new UpdateIncidentModel
                {
                    Title = existingIncident.Title,
                    Description = existingIncident.Description,
                    StatusId = existingIncident.StatusId,
                    PriorityId = existingIncident.PriorityId,
                    AssignedToUserId = existingIncident.AssignedTo
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var success = await IncidentApi.UpdateIncidentAsync(IncidentId, incident);

            if (success)
            {
                Navigation.NavigateTo($"/incidents/{IncidentId}");
            }
            else
            {
                errorMessage = "Incident not found or update failed.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating incident: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/incidents/{IncidentId}");
    }
}
