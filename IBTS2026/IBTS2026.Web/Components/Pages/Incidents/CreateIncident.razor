@page "/incidents/create"
@using IBTS2026.Web.Models
@using IBTS2026.Web.Services.ApiClients
@using IBTS2026.Web.Services.Auth
@inject IIncidentApiClient IncidentApi
@inject ILookupApiClient LookupApi
@inject IAuthService AuthService
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Create Incident</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div>
            <h1>Create Incident</h1>
            <p class="page-subtitle">Report a new incident</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border"></div>
            <p>Loading...</p>
        </div>
    }
    else
    {
        <div class="form-card">
            @if (errorMessage is not null)
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="incident" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" />

                <div class="form-group">
                    <label for="title" class="form-label">Title</label>
                    <InputText id="title" class="form-control" @bind-Value="incident.Title" placeholder="Brief description of the incident" />
                    <ValidationMessage For="() => incident.Title" />
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="5" @bind-Value="incident.Description" placeholder="Detailed description of what happened..." />
                    <ValidationMessage For="() => incident.Description" />
                </div>

                <div class="form-row">
                    <div class="form-group form-group-half">
                        <label for="priority" class="form-label">Priority</label>
                        <InputSelect id="priority" class="form-select" @bind-Value="incident.PriorityId">
                            @foreach (var priority in priorities)
                            {
                                <option value="@priority.PriorityId">@priority.PriorityName</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="form-group form-group-half">
                        <label for="status" class="form-label">Initial Status</label>
                        <InputSelect id="status" class="form-select" @bind-Value="incident.StatusId">
                            @foreach (var status in statuses)
                            {
                                <option value="@status.StatusId">@status.StatusName</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group form-group-half">
                        <label for="createdBy" class="form-label">Created By</label>
                        <InputSelect id="createdBy" class="form-select" @bind-Value="incident.CreatedByUserId">
                            <option value="0">-- Select User --</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.UserId">@user.FullName</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="() => incident.CreatedByUserId" />
                    </div>

                    <div class="form-group form-group-half">
                        <label for="assignedTo" class="form-label">Assigned To (optional)</label>
                        <InputSelect id="assignedTo" class="form-select" @bind-Value="incident.AssignedToUserId">
                            <option value="">-- Unassigned --</option>
                            @foreach (var user in users)
                            {
                                <option value="@user.UserId">@user.FullName</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span>Create Incident</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: var(--space-5);
    }

    .page-header h1 {
        margin-bottom: var(--space-1);
    }

    .page-subtitle {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .form-card {
        background: var(--color-bg-primary);
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .form-row {
        display: flex;
        gap: var(--space-4);
    }

    .form-group-half {
        flex: 1;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: var(--space-3);
        margin-top: var(--space-5);
        padding-top: var(--space-5);
        border-top: 1px solid var(--color-border-light);
    }

    .loading-state {
        text-align: center;
        padding: var(--space-10);
        background: var(--color-bg-primary);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .loading-state .spinner-border {
        width: 2rem;
        height: 2rem;
        color: var(--color-primary);
        margin-bottom: var(--space-4);
    }

    .loading-state p {
        color: var(--color-text-muted);
        margin-bottom: 0;
    }

    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>
