@page "/users/create"
@using IBTS2026.Web.Models
@using IBTS2026.Web.Services.ApiClients
@inject IUserApiClient UserApi
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Create User</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div>
            <h1>Create User</h1>
            <p class="page-subtitle">Add a new user to the system</p>
        </div>
    </div>

    <div class="form-card">
        @if (errorMessage is not null)
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <EditForm Model="user" OnValidSubmit="HandleSubmit" FormName="CreateUserForm">
            <DataAnnotationsValidator />
            <ValidationSummary class="alert alert-danger" />

            <div class="form-row">
                <div class="form-group form-group-half">
                    <label for="firstName" class="form-label">First Name</label>
                    <InputText id="firstName" class="form-control" @bind-Value="user.FirstName" placeholder="John" />
                    <ValidationMessage For="() => user.FirstName" />
                </div>

                <div class="form-group form-group-half">
                    <label for="lastName" class="form-label">Last Name</label>
                    <InputText id="lastName" class="form-control" @bind-Value="user.LastName" placeholder="Doe" />
                    <ValidationMessage For="() => user.LastName" />
                </div>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <InputText id="email" class="form-control" @bind-Value="user.Email" placeholder="john.doe@example.com" />
                <ValidationMessage For="() => user.Email" />
            </div>

            <div class="form-group">
                <label for="role" class="form-label">Role</label>
                <InputSelect id="role" class="form-select" @bind-Value="user.Role">
                    <option value="">Select a role</option>
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </InputSelect>
                <ValidationMessage For="() => user.Role" />
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                        <span>Creating...</span>
                    }
                    else
                    {
                        <span>Create User</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

<style>
    .page-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: var(--space-5);
    }

    .page-header h1 {
        margin-bottom: var(--space-1);
    }

    .page-subtitle {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .form-card {
        background: var(--color-bg-primary);
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .form-row {
        display: flex;
        gap: var(--space-4);
    }

    .form-group-half {
        flex: 1;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: var(--space-3);
        margin-top: var(--space-5);
        padding-top: var(--space-5);
        border-top: 1px solid var(--color-border-light);
    }

    @@media (max-width: 480px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

@code {
    private CreateUserModel user = new();
    private bool isSubmitting = false;
    private string? errorMessage;

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var userId = await UserApi.CreateUserAsync(user);
            Navigation.NavigateTo("/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating user: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/users");
    }
}
