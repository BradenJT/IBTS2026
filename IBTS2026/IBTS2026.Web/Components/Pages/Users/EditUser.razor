@page "/users/edit/{UserId:int}"
@using IBTS2026.Web.Models
@using IBTS2026.Web.Services.ApiClients
@inject IUserApiClient UserApi
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Edit User</PageTitle>

<div class="page-container">
    <div class="page-header">
        <div>
            <h1>Edit User</h1>
            <p class="page-subtitle">Update user information</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border"></div>
            <p>Loading user...</p>
        </div>
    }
    else if (notFound)
    {
        <div class="form-card">
            <div class="alert alert-warning">User not found.</div>
            <button class="btn btn-secondary" @onclick="Cancel">Back to Users</button>
        </div>
    }
    else
    {
        <div class="form-card">
            @if (errorMessage is not null)
            {
                <div class="alert alert-danger">@errorMessage</div>
            }

            <EditForm Model="user" OnValidSubmit="HandleSubmit" FormName="EditUserForm">
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" />

                <div class="form-row">
                    <div class="form-group form-group-half">
                        <label for="firstName" class="form-label">First Name</label>
                        <InputText id="firstName" class="form-control" @bind-Value="user.FirstName" placeholder="John" />
                        <ValidationMessage For="() => user.FirstName" />
                    </div>

                    <div class="form-group form-group-half">
                        <label for="lastName" class="form-label">Last Name</label>
                        <InputText id="lastName" class="form-control" @bind-Value="user.LastName" placeholder="Doe" />
                        <ValidationMessage For="() => user.LastName" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <InputText id="email" class="form-control" @bind-Value="user.Email" placeholder="john.doe@example.com" />
                    <ValidationMessage For="() => user.Email" />
                </div>

                <div class="form-group">
                    <label for="role" class="form-label">Role</label>
                    <InputSelect id="role" class="form-select" @bind-Value="user.Role">
                        <option value="">Select a role</option>
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </InputSelect>
                    <ValidationMessage For="() => user.Role" />
                </div>

                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save Changes</span>
                        }
                    </button>
                </div>
            </EditForm>
        </div>
    }
</div>

<style>
    .page-container {
        max-width: 600px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: var(--space-5);
    }

    .page-header h1 {
        margin-bottom: var(--space-1);
    }

    .page-subtitle {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .form-card {
        background: var(--color-bg-primary);
        padding: var(--space-6);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .form-row {
        display: flex;
        gap: var(--space-4);
    }

    .form-group-half {
        flex: 1;
    }

    .form-actions {
        display: flex;
        justify-content: flex-end;
        gap: var(--space-3);
        margin-top: var(--space-5);
        padding-top: var(--space-5);
        border-top: 1px solid var(--color-border-light);
    }

    .loading-state {
        text-align: center;
        padding: var(--space-10);
        background: var(--color-bg-primary);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
    }

    .loading-state .spinner-border {
        width: 2rem;
        height: 2rem;
        color: var(--color-primary);
        margin-bottom: var(--space-4);
    }

    .loading-state p {
        color: var(--color-text-muted);
        margin-bottom: 0;
    }

    @@media (max-width: 480px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>

@code {
    [Parameter]
    public int UserId { get; set; }

    private UpdateUserModel user = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool notFound = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadUser();
    }

    private async Task LoadUser()
    {
        try
        {
            isLoading = true;
            var existingUser = await UserApi.GetUserAsync(UserId);

            if (existingUser is null)
            {
                notFound = true;
            }
            else
            {
                user = new UpdateUserModel
                {
                    Email = existingUser.Email,
                    FirstName = existingUser.FirstName,
                    LastName = existingUser.LastName,
                    Role = existingUser.Role
                };
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            errorMessage = null;

            var success = await UserApi.UpdateUserAsync(UserId, user);

            if (success)
            {
                Navigation.NavigateTo("/users");
            }
            else
            {
                errorMessage = "User not found or update failed.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating user: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/users");
    }
}
