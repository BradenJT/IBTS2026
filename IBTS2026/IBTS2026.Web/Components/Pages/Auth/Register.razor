@page "/register"
@using IBTS2026.Web.Models.Auth
@using IBTS2026.Web.Services.Auth
@using Microsoft.AspNetCore.WebUtilities
@inject IAuthService AuthService
@inject NavigationManager Navigation
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Register - IBTS</PageTitle>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            @if (_isFirstUser)
            {
                <h2>Welcome!</h2>
                <p class="auth-subtitle">Create your admin account to get started</p>
            }
            else if (_hasValidToken)
            {
                <h2>Join IBTS</h2>
                <p class="auth-subtitle">Complete your registration to get started</p>
            }
            else
            {
                <h2>Invitation Required</h2>
                <p class="auth-subtitle">This system is invite-only</p>
            }
        </div>

        @if (_successMessage != null)
        {
            <div class="alert alert-success">@_successMessage</div>
        }

        @if (_errorMessage != null)
        {
            <div class="alert alert-danger">@_errorMessage</div>
        }

        @if (_isFirstUser || _hasValidToken)
        {
            <EditForm Model="_model" OnValidSubmit="HandleRegisterAsync" FormName="RegisterForm">
                <DataAnnotationsValidator />

                <div class="form-row">
                    <div class="form-group form-group-half">
                        <label for="firstName" class="form-label">First Name</label>
                        <InputText id="firstName" class="form-control" @bind-Value="_model.FirstName" placeholder="John" />
                        <ValidationMessage For="@(() => _model.FirstName)" />
                    </div>

                    <div class="form-group form-group-half">
                        <label for="lastName" class="form-label">Last Name</label>
                        <InputText id="lastName" class="form-control" @bind-Value="_model.LastName" placeholder="Doe" />
                        <ValidationMessage For="@(() => _model.LastName)" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <InputText id="email" class="form-control" @bind-Value="_model.Email" placeholder="you@example.com" disabled="@(!string.IsNullOrEmpty(_invitedEmail))" />
                    <ValidationMessage For="@(() => _model.Email)" />
                    @if (!string.IsNullOrEmpty(_invitedEmail))
                    {
                        <span class="form-text">This email was set by your invitation.</span>
                    }
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <InputText id="password" type="password" class="form-control" @bind-Value="_model.Password" placeholder="Min 8 characters" />
                    <ValidationMessage For="@(() => _model.Password)" />
                </div>

                <div class="form-group">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="_model.ConfirmPassword" placeholder="Confirm your password" />
                    <ValidationMessage For="@(() => _model.ConfirmPassword)" />
                </div>

                <button type="submit" class="btn btn-primary btn-block" disabled="@_isRegistering">
                    @if (_isRegistering)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                        <span>Creating account...</span>
                    }
                    else
                    {
                        <span>Create Account</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <div class="invite-notice">
                <p>Please contact an administrator for an invitation link.</p>
            </div>
        }

        <div class="auth-footer">
            <p>Already have an account? <a href="/login">Sign in</a></p>
        </div>
    </div>
</div>

<style>
    .auth-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 7rem);
        padding: var(--space-5);
    }

    .auth-card {
        background: var(--color-bg-primary);
        padding: var(--space-6);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
        max-width: 480px;
        width: 100%;
    }

    .auth-header {
        text-align: center;
        margin-bottom: var(--space-6);
    }

    .auth-header h2 {
        margin-bottom: var(--space-2);
        color: var(--color-text-primary);
        font-size: var(--font-size-2xl);
    }

    .auth-subtitle {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .form-row {
        display: flex;
        gap: var(--space-4);
    }

    .form-group-half {
        flex: 1;
    }

    .btn-block {
        width: 100%;
        padding: var(--space-3);
        font-size: var(--font-size-base);
        margin-top: var(--space-2);
    }

    .invite-notice {
        text-align: center;
        padding: var(--space-5);
        background: var(--color-bg-secondary);
        border-radius: var(--radius-md);
        color: var(--color-text-muted);
    }

    .invite-notice p {
        margin-bottom: 0;
    }

    .auth-footer {
        margin-top: var(--space-5);
        text-align: center;
    }

    .auth-footer p {
        color: var(--color-text-muted);
        margin-bottom: 0;
        font-size: var(--font-size-sm);
    }

    .auth-footer a {
        color: var(--color-primary);
        font-weight: var(--font-weight-medium);
    }

    .auth-footer a:hover {
        color: var(--color-primary-hover);
    }

    @@media (max-width: 480px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }
    }
</style>
