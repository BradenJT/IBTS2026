@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">IBTS2026</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fa-solid fa-house nav-icon" aria-hidden="true"></i> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="users">
                        <i class="fa-solid fa-users nav-icon" aria-hidden="true"></i> Users
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="incidents">
                        <i class="fa-solid fa-triangle-exclamation nav-icon" aria-hidden="true"></i> Incidents
                    </NavLink>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <i class="fa-solid fa-right-to-bracket nav-icon" aria-hidden="true"></i> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <AuthorizeView Roles="Admin">
            <Authorized Context="adminContext">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/invitations">
                        <i class="fa-solid fa-envelope nav-icon" aria-hidden="true"></i> Invitations
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>
